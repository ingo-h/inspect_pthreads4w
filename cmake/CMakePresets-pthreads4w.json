{
  "version": 8,
  "configurePresets": {
    "name": "default",
    "displayName": "Default Config",
    "description": "Default build using NMake Makefiles generator",
    "generator": "NMake Makefiles",
    "binaryDir": "${sourceDir}/build",
    "cacheVariables": {
      "CMAKE_BUILD_TYPE": {
        "type": "BOOL",
        "value": "OFF"
      },
      "CMAKE_BUILD_TYPE": {
        "type": "STRING",
        "value": "Release"
      }
    }
  }
}
